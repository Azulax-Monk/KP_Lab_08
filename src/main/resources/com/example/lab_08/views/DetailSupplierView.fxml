<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.example.lab_08.utils.WrappedImageView?>
<?import javafx.scene.image.Image?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml" styleClass="icon-group">
    <WrappedImageView preserveRatio="true">
        <image>
            <Image url="@../icons/supplier.png" />
        </image>
    </WrappedImageView>
    <HBox>
        <Label fx:id="nameField" text="Supplier" styleClass="header"/>
        <Label fx:id="supplierCountField" text="-" styleClass="header"/>
    </HBox>
    <HBox>
        <Label text="Items created: " styleClass="item"/>
        <Label fx:id="itemsCountField" text="-" styleClass="item"/>
    </HBox>
    <HBox>
        <Label text="State: " styleClass="item"/>
        <Label fx:id="stateField" text="-" styleClass="item"/>
    </HBox>
</fx:root>
